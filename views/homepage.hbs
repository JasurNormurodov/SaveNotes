  <main>
    <div class="container mt-5">
      <div class="row mt-2 px-3">
        <button onclick="document.getElementById('new-note-form').style.display='block'" id="addNote"
          class="col-sm-4 col-6 col-lg-3 col-xl-2 mb-3 mb-md-0 btn  btn-success add-note text-uppercase">add note <i
            class="fas fa-feather-alt fa-lg text-white"></i></button>
        <div id="input-box" class="col-2 col-sm-1 pr-0 pl-lg-4 pl-0 pl-sm-0 pl-xl-5">
          <label id="searchLabel" for="search"><i class="fas fa-search fa-lg text-secondary"></i></label>
          <input autocomplete="off" type="text" id="search" placeholder="" class="outline-none" />
        </div>
      </div>

      <!-- The Modal (contains the Add Note form) -->
      <div id="new-note-form" class="modal">
        <form class="modal-content">
          <div class="container">
            <h1>Add Note</h1>
            <hr>
            <label for="title"><b id="enterTitle">Title</b></label>
            <input class="input" type="text" placeholder="Enter Title" id="title" required>
            <label for="nbody"><b id="enterNote">Note</b></label>
            <textarea class="textarea" placeholder="Enter Note" id="content" required></textarea>
            <div class="clearfix">
              <button type="button" onclick="document.getElementById('new-note-form').style.display='none'"
                class="cancelBtn button">Cancel</button>
              <button type="submit" class="addBtn button">Add</button>
            </div>
          </div>
        </form>
      </div>
      <template id="note-template">
        <div class="collapsible-group col-12">
          <div class="collapsible d-flex px-1">
            <div class="col-2 col-sm-1 index mt-1 pl-1 text-center"></div>
            <input class="col-md-6  col-7 col-sm-8 title font-weight-bold outline-none" readonly />
            <div class="col-md-2 col-0 px-md-0 ml-1">
              <div id="editedTitleLabel" class="my-n1 mb-n1 small">Edited</div>
              <div class="editedDate outline-none"></div>
            </div>
            <div class="col-md-2 col-0 px-md-0">
              <div id="createdTitleLabel" class="mt-n1 mb-n1 small">Created</div>
              <div class="createdDate"></div>
            </div>
            <div class="col-2 text-success col-md-1 justify-content-around d-flex icons px-0 ">
              <button alt='' class="btn  btn-white editBtnIcon p-0 outline-none mr-2 mr-xl-0 mr-lg-1" type="button"><i
                  class="fas fa-edit fa-lg"></i></button>
              <button class="btn btn-white deleteBtnIcon p-0 outline-none mr-xl-0 mr-md-1" type='submit'><i
                  class="fas fa-trash fa-lg"></i></button>
            </div>
          </div>
          <div class="content">
            <div class="d-none justify-content-end dateContent mx-n1">
              <div><span id="editedContentLabel">Edited:</span><span class="editedDateContent mr-1"></span></div>
              <div><span id="createdContentLabel"> |Created:</span><span class="createdDateContent"></span></div>
            </div>
            <p>
              <textarea class="w-100 mt-1 noteBody border-0 "></textarea>
            </p>
            <div class="d-none">
              <button type="button" class="btn btn-sm btn-success saveBtn">Save</button>
              <button type='button' class="btn btn-sm btn-warning ml-1 undoBtn">Undo</button>
            </div>
          </div>
        </div>
      </template>

      <div id="notes-list" class="mt-4 row">

      </div>
    </div>

  </main>
  <div>
    <a href="#" class="to-top px-2 d-none"><i class="fas fa-chevron-up"></i></a>
